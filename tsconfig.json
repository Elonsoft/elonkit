{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "stripInternal": true,
    "paths": {
      "elonkit": ["dist/elonkit"],
      "elonkit/*": ["dist/elonkit/*"],
      "~storybook/*": ["projects/elonkit/storybook/*"],
      "~utils/*": ["projects/elonkit/src/utils/*"],
      "@elonkit/cdk/*": ["projects/elonkit/src/cdk/*"]
    },
    "types": ["jest"],
    "jsx": "react"
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
